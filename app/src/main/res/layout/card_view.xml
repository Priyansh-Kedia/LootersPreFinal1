<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="350sp"
        android:layout_height="113sp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:cardElevation="20dp"
        android:layout_margin="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:background="@drawable/cardborder"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="as"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/section"
                android:visibility="invisible"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enabled"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemtext"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:text="Item"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemprice"
                app:layout_constraintTop_toBottomOf="@id/itemtext"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/subB"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toRightOf="@id/itemprice"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/minusbtnm"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/addB"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/itemprice"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="234dp"
                android:background="@drawable/plusbtnm"
                android:layout_marginTop="60dp"
               />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/itemprice"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="220dp"
                android:textColor="#FF8330"
                android:layout_marginTop="63dp"
                android:text="0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>