<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#292C32"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="113dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="15dp"
        app:cardElevation="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:background="@drawable/cardborder"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemtextcart"
                android:textColor="#fff"
                android:text="HEY"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".05"
                app:layout_constraintVertical_bias=".3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itempricecart"
                android:text="Price"
                android:textColor="#FF8330"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/itemtextcart"
                app:layout_constraintLeft_toLeftOf="@+id/itemtextcart"
                />

            <Button
                android:id="@+id/subBcart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/minusbtnm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/addBcart"
                android:layout_marginRight="30dp"
                app:layout_constraintVertical_bias=".95"
                tools:layout_editor_absoluteX="314dp"


                />

            <Button
                android:id="@+id/addBcart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textSize="10dp"
                android:background="@drawable/plusbtnm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".99"
                app:layout_constraintVertical_bias=".95"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/quancart"
                android:textColor="#FF8330"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/subBcart"
                app:layout_constraintRight_toLeftOf="@id/addBcart"
                app:layout_constraintVertical_bias=".95"
                android:text="00"/>

